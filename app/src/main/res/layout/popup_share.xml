<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivOutClick"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
<LinearLayout
    android:id="@+id/safe"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/popup_share"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <TextView
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>
<TextView
android:id="@+id/tvLabel"
    android:textSize="12sp"
android:textColor="@android:color/white"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageButton
        android:layout_margin="8dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_bluetooth_white"
        android:background="@android:color/holo_blue_dark"/>
    <ImageButton
        android:layout_margin="8dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_wifi_white"
        android:background="@android:color/holo_green_dark"/>
    <ImageButton
        android:layout_margin="8dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_location_white"
        android:background="@android:color/holo_red_dark"/>
    <ImageButton
        android:layout_margin="8dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_time_white"
        android:background="@android:color/holo_orange_dark"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_margin="8dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_home_in"
            android:background="@android:color/holo_green_light"/>
        <ImageButton
            android:layout_margin="8dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_home_out"
            android:background="@android:color/holo_red_light"/>
        <ImageButton
            android:layout_margin="8dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_work_in"
            android:background="@android:color/holo_green_light"/>
        <ImageButton
            android:layout_margin="8dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_work_out"
            android:background="@android:color/holo_red_light"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>