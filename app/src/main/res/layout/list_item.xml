<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slReminders"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:padding="8dp"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlDelete"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark">

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlEdit"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_green_dark">

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_edit" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlView"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark">

            <ImageView
                android:id="@+id/ivView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_view" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlMove"
            android:visibility="gone"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_dark">

            <ImageView
                android:id="@+id/ivMove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_back" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUpper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="14dp">


            <RelativeLayout
                android:id="@+id/llConditionArea"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:gravity="center_vertical"
                android:paddingBottom="1dp">

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_bluetooth" />

                <TextView
                    android:id="@+id/tvCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_toEndOf="@id/ivIcon"
                    android:layout_toStartOf="@id/tvDone"
                    android:text="fawefewafweafawfaewfweafawefa"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/doneColor"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:text="11:22"
                    android:textSize="11sp"
                    android:textStyle="italic" />
            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/ivBigLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_link_dark"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ivCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:background="@null"
                android:src="@drawable/ic_unchecked_box_grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp">

            <LinearLayout
                android:id="@+id/llLinkArea"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginStart="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="1dp">

                <ImageView
                    android:id="@+id/ivLink"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/ic_link" />

                <TextView
                    android:id="@+id/tvLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:text="fawefewafweafawfaewfweafawefa"
                    android:textSize="11sp"
                    android:textStyle="italic" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>